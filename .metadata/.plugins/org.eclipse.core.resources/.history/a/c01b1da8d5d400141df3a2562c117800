package ru.kpfu.itis.group11403.sharipova.queue;


import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;
import java.util.Random;;

public class Faculty {
	private Student [] students;

	public Faculty(Student[] students) {
		super();
		this.students = students;
	}
	public Student [] RandomLuckyStudents(){
		Random rnd = new Random();
		int randomLength=rnd.nextInt(students.length-1)+1;
		int randomStudent=rnd.nextInt(students.length-1);
		List<Student> someStudents= new ArrayList<Student>(randomLength);
		if(!someStudents.contains(students[randomStudent])){
			someStudents.add(students[randomStudent]);
		}
		else randomStudent=rnd.nextInt(students.length-1);
		return someStudents.toArray(new Student[randomLength]);
	}
}
